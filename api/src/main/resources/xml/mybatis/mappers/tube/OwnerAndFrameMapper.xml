<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="photon.tube.model.OwnerAndFrameMapper">

    <insert id="addOwner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tube.owner (auth_id, nickname)
        VALUES (#{authId}, #{nickname})
    </insert>

    <insert id="addAlias">
        INSERT INTO tube.owner (auth_id, nickname, id)
            SELECT
                #{authId},
                nickname,
                id
            FROM tube.owner
            WHERE id = #{id}
            LIMIT 1
    </insert>

    <select id="getIdByAuthId" resultType="int">
        SELECT id
        FROM tube.owner
        WHERE auth_id = #{authId}
    </select>

    <delete id="deleteOwnerById">
        DELETE FROM tube.owner
        WHERE id = #{id}
    </delete>

    <delete id="deleteAlias">
        DELETE FROM tube.owner
        WHERE auth_id = #{authId} AND id = #{id}
    </delete>

</mapper>