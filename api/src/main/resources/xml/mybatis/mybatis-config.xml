<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="mybatis.properties" />

    <typeAliases>
        <typeAlias alias="Catalog" type="photon.model.Catalog"/>
        <typeAlias alias="ViewLog" type="photon.model.ViewLog"/>
        <typeAlias alias="User" type="photon.model.User"/>
        <typeAlias alias="FavoriteLog" type="photon.model.FavoriteLog"/>
    </typeAliases>

    <environments default="prod">
        <environment id="prod">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${prod.driver}"/>
                <property name="url" value="${prod.url}"/>
                <property name="username" value="${prod.username}"/>
                <property name="password" value="${prod.password}"/>
            </dataSource>
        </environment>
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:tcp://localhost/~/test/mfw;mode=MySQL"/>
                <property name="username" value="sa"/>
                <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="xml/mybatis/mappers/CatalogMapper.xml"/>
        <mapper resource="xml/mybatis/mappers/ViewLogMapper.xml"/>
        <mapper resource="xml/mybatis/mappers/UserMapper.xml"/>
        <mapper resource="xml/mybatis/mappers/FavoriteLogMapper.xml"/>
    </mappers>
</configuration>