<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="photon.data.persistence.ArrowMapper">

  <resultMap type="arrow" id="arrowResultMap">
    <id property="id" column="id" />
    <result property="origin" column="origin" />
    <result property="target" column="target" />
    <result property="type" column="type" />
    <result property="extension" column="extension" />
  </resultMap>

  <select id="selectOne" resultMap="arrowResultMap">
    select
      *
    from photon.arrow where id = #{id}
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
  	insert into photon.arrow (origin,target,type,extension)
  	values (#{origin},#{target},#{type},#{extension})
  </insert>

  <select id="selectByOrigin" resultMap="arrowResultMap">
    select 
      *
    from photon.arrow where origin = #{origin}
  </select>

  <select id="selectAll" resultMap="arrowResultMap">
    select
      *
    from photon.arrow
  </select>

  <select id="originIdSet" resultType="int">
    select
      origin
    from photon.arrow
  </select>

  <select id="neighborIdSet" resultType="int">
    select 
      target
    from photon.arrow where origin = #{origin} and type = #{type}
  </select>

  <delete id="delete">
    delete from photon.arrow
    where id = #{id}
  </delete>

  <delete id="deleteSimilar">
    delete from photon.arrow
    where origin = #{origin} and target = #{target} and type = #{type}
  </delete>

  <delete id="deleteByPoint">
    delete from photon.arrow
    where origin = #{id} or target = #{id}
  </delete>

</mapper>